generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FAQArticle {
  id         Int       @id @default(autoincrement())
  category   String?
  categoryId Int?
  title      String
  content    String
  media      Json?
  sourceType String?   @default("llm_import")
  confidence Float?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  categoryRel Category? @relation(fields: [categoryId], references: [id])
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())

  faqs      FAQArticle[]

  @@unique([name], map: "category_name_unique")
}

model SiteConfig {
  key       String   @id
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model InteractionLog {
  id        Int      @id @default(autoincrement())
  type      String   // chat_question | faq_click
  faqId     Int?
  faqTitle  String?
  payload   Json?
  createdAt DateTime @default(now())

  @@index([type, createdAt])
  @@index([faqId, createdAt])
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FAQArticle {
  id         Int       @id @default(autoincrement())
  category   String?
  categoryId Int?
  title      String
  content    String
  sourceType String?   @default("llm_import")
  confidence Float?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  categoryRel Category? @relation(fields: [categoryId], references: [id])
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())

  faqs      FAQArticle[]

  @@unique([name], map: "category_name_unique")
}
